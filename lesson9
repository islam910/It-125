from abc import ABC, abstractmethod

class Payment(ABC):
    @abstractmethod
    def pay(self, amount):
        pass

    @abstractmethod
    def refund(self, amount):
        pass


class CreditCardPayment(Payment):
    def pay(self, amount):
        print(f"–û–ø–ª–∞—Ç–∞ {amount}‚ÇΩ —Å –∫—Ä–µ–¥–∏—Ç–Ω–æ–π –∫–∞—Ä—Ç—ã –≤—ã–ø–æ–ª–Ω–µ–Ω–∞.")

    def refund(self, amount):
        print(f"–í–æ–∑–≤—Ä–∞—Ç {amount}‚ÇΩ –Ω–∞ –∫—Ä–µ–¥–∏—Ç–Ω—É—é –∫–∞—Ä—Ç—É –≤—ã–ø–æ–ª–Ω–µ–Ω.")


class CryptoPayment(Payment):
    def pay(self, amount):
        print(f"–û–ø–ª–∞—Ç–∞ {amount}‚ÇΩ –≤ –∫—Ä–∏–ø—Ç–æ–≤–∞–ª—é—Ç–µ –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∞.")

    def refund(self, amount):
        print(f"–í–æ–∑–≤—Ä–∞—Ç {amount}‚ÇΩ –≤ –∫—Ä–∏–ø—Ç–æ–≤–∞–ª—é—Ç–µ –∑–∞–≤–µ—Ä—à—ë–Ω.")


payments = [CreditCardPayment(), CryptoPayment()]
for p in payments:
    p.pay(1000)
    p.refund(300)

class Course(ABC):
    @abstractmethod
    def start(self):
        pass

    @abstractmethod
    def get_materials(self):
        pass

    @abstractmethod
    def end(self):
        pass


class PythonCourse(Course):
    def start(self):
        print("–ö—É—Ä—Å –ø–æ Python –Ω–∞—á–∞–ª—Å—è")

    def get_materials(self):
        return ["–û–û–ü"]

    def end(self):
        print("–ö—É—Ä—Å –ø–æ Python –∑–∞–≤–µ—Ä—à—ë–Ω!")


class MathCourse(Course):
    def start(self):
        print("–ö—É—Ä—Å –ø–æ –º–∞—Ç–µ–º–∞—Ç–∏–∫–µ –Ω–∞—á–∞–ª—Å—è! üìò")

    def get_materials(self):
        return ["–ê–ª–≥–µ–±—Ä–∞"]

    def end(self):
        print("–ö—É—Ä—Å –ø–æ –º–∞—Ç–µ–º–∞—Ç–∏–∫–µ –∑–∞–≤–µ—Ä—à—ë–Ω!")


courses = [PythonCourse(), MathCourse()]
for c in courses:
    c.start()
    print("–ú–∞—Ç–µ—Ä–∏–∞–ª—ã:", c.get_materials())
    c.end()
    print()

class Delivery(ABC):
    @abstractmethod
    def calculate_cost(self, distance):
        pass

    @abstractmethod
    def deliver(self):
        pass


class AirDelivery(Delivery):
    def calculate_cost(self, distance):
        return distance * 10

    def deliver(self):
        print("–î–æ—Å—Ç–∞–≤–∫–∞ –ø–æ –≤–æ–∑–¥—É—Ö—É –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω–∞")


class GroundDelivery(Delivery):
    def calculate_cost(self, distance):
        return distance * 5

    def deliver(self):
        print("–ù–∞–∑–µ–º–Ω–∞—è –¥–æ—Å—Ç–∞–≤–∫–∞ –≤—ã–ø–æ–ª–Ω–µ–Ω–∞")


class SeaDelivery(Delivery):
    def calculate_cost(self, distance):
        return distance * 7

    def deliver(self):
        print("–ú–æ—Ä—Å–∫–∞—è –¥–æ—Å—Ç–∞–≤–∫–∞ –≤ –ø—É—Ç–∏")


deliveries = [AirDelivery(), GroundDelivery(), SeaDelivery()]
for d in deliveries:
    print(f"{d.__class__.__name__}: —Å—Ç–æ–∏–º–æ—Å—Ç—å = {d.calculate_cost(100)}‚ÇΩ")
    d.deliver()
    print()

class BankAccount:
    def __init__(self, owner, pin):
        self.__owner = owner
        self.__balance = 0
        self.__pin = pin

    def deposit(self, amount, pin):
        if pin != self.__pin:
            print("–ù–µ–≤–µ—Ä–Ω—ã–π PIN!")
            return
        if amount <= 0:
            print("–ù–µ–∫–æ—Ä—Ä–µ–∫—Ç–Ω–∞—è —Å—É–º–º–∞.")
            return
        self.__balance += amount
        print(f"–ü–æ–ø–æ–ª–Ω–µ–Ω–æ: {amount}‚ÇΩ. –ë–∞–ª–∞–Ω—Å: {self.__balance}‚ÇΩ")

    def withdraw(self, amount, pin):
        if pin != self.__pin:
            print("–ù–µ–≤–µ—Ä–Ω—ã–π PIN!")
            return
        if amount <= 0 or amount > self.__balance:
            print("–ù–µ–¥–æ–ø—É—Å—Ç–∏–º–∞—è —Å—É–º–º–∞.")
            return
        self.__balance -= amount
        print(f"–°–Ω—è—Ç–æ: {amount}‚ÇΩ. –ë–∞–ª–∞–Ω—Å: {self.__balance}‚ÇΩ")

    def change_pin(self, old_pin, new_pin):
        if old_pin != self.__pin:
            print("—Å—Ç–∞—Ä—ã–π PIN!")
            return
        self.__pin = new_pin
        print("PIN —É—Å–ø–µ—à–Ω–æ –∏–∑–º–µ–Ω—ë–Ω.")


acc = BankAccount("–ò–≤–∞–Ω", 1234)
acc.deposit(1000, 1234)
acc.withdraw(300, 1234)
acc.change_pin(1234, 4321)
print()

class UserProfile:
    def __init__(self, email, password):
        self.__email = email
        self.__password = password
        self._status = "free"

    def login(self, email, password):
        if email == self.__email and password == self.__password:
            print(f"–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å, {email}!")
            return True
        else:
            print("–ù–µ–≤–µ—Ä–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ –¥–ª—è –≤—Ö–æ–¥–∞!")
            return False

    def upgrade_to_premium(self):
        self._status = "premium"
        print("PREMIUM")

    def get_info(self):
        return f"Email: {self.__email}, –°—Ç–∞—Ç—É—Å: {self._status}"


user = UserProfile("test@mail.com", "12345")
if user.login("test@mail.com", "12345"):
    user.upgrade_to_premium()
print(user.get_info())
print()

class Product:
    def __init__(self, name, price):
        self.name = name
        self.price = price
        self.__discount = 0

    def set_discount(self, percent, is_admin=False):
        if is_admin:
            self.__discount = percent
            print(f"–°–∫–∏–¥–∫–∞ {percent}% —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∞.")
        else:
            print("–ù–µ—Ç –ø—Ä–∞–≤ –¥–ª—è –∏–∑–º–µ–Ω–µ–Ω–∏—è —Å–∫–∏–¥–∫–∏.")

    def get_price(self):
        return self.price * (1 - self.__discount / 100)


prod = Product("–ù–æ—É—Ç–±—É–∫", 100000)
prod.set_discount(15, is_admin=True)
print(f"–¶–µ–Ω–∞ —Å–æ —Å–∫–∏–¥–∫–æ–π: {prod.get_price()}‚ÇΩ")
print()

class TextFile:
    def open(self):
        print("–û—Ç–∫—Ä—ã—Ç —Ç–µ–∫—Å—Ç–æ–≤—ã–π —Ñ–∞–π–ª üìÑ")


class ImageFile:
    def open(self):
        print("–û—Ç–∫—Ä—ã—Ç –≥—Ä–∞—Ñ–∏—á–µ—Å–∫–∏–π —Ñ–∞–π–ª üñºÔ∏è")


class AudioFile:
    def open(self):
        print("–û—Ç–∫—Ä—ã—Ç –∞—É–¥–∏–æ—Ñ–∞–π–ª üéµ")


def open_all(files):
    for f in files:
        f.open()


files = [TextFile(), ImageFile(), AudioFile()]
open_all(files)
print()

class Car:
    def move(self, distance):
        speed = 100
        time = distance / speed
        print(f"–ú–∞—à–∏–Ω–∞ –ø—Ä–æ–µ—Ö–∞–ª–∞ {distance} –∫–º –∑–∞ {time:.2f} —á.")


class Truck:
    def move(self, distance):
        speed = 60
        time = distance / speed
        print(f"–ì—Ä—É–∑–æ–≤–∏–∫ –ø—Ä–æ–µ—Ö–∞–ª {distance} –∫–º –∑–∞ {time:.2f} —á.")


class Bicycle:
    def move(self, distance):
        speed = 20
        time = distance / speed
        print(f"–í–µ–ª–æ—Å–∏–ø–µ–¥ –ø—Ä–æ–µ—Ö–∞–ª {distance} –∫–º –∑–∞ {time:.2f} —á.")


def simulate_transport(transport_list, distance):
    for t in transport_list:
        t.move(distance)


simulate_transport([Car(), Truck(), Bicycle()], 120)
print()

class Student:
    def access_portal(self):
        print("–°—Ç—É–¥–µ–Ω—Ç: –¥–æ—Å—Ç—É–ø –∫ —Ä–∞—Å–ø–∏—Å–∞–Ω–∏—é –∑–∞–Ω—è—Ç–∏–π.")


class Teacher:
    def access_portal(self):
        print("–ü—Ä–µ–ø–æ–¥–∞–≤–∞—Ç–µ–ª—å: –¥–æ—Å—Ç—É–ø –∫ –æ—Ü–µ–Ω–∫–∞–º –∏ –º–∞—Ç–µ—Ä–∏–∞–ª–∞–º.")


class Administrator:
    def access_portal(self):
        print("–ê–¥–º–∏–Ω–∏—Å—Ç—Ä–∞—Ç–æ—Ä: —É–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è–º–∏ –∏ –∫—É—Ä—Å–∞–º–∏.")


users = [Student(), Teacher(), Administrator()]
for u in users:
    u.access_portal()

